#!/bin/bash

readonly user='kat'
readonly host='kath.io'
readonly port='22'
readonly socks_port='1080'
readonly backchat_port='38627'

title() {
    echo -en "\033]2;${user}@${host}: $1\a"
}

opts=(
    -o Compression=yes
    -o DynamicForward="localhost:${socks_port}"
    -o EscapeChar=none
    -o LocalCommand="echo -en '$(title 'Connected üòÉ')'"
    -o PermitLocalCommand=yes
    -o Port="${port}"
    -o RemoteForward="${backchat_port} localhost:${backchat_port}"
    -o RequestTTY=force
    -o ServerAliveCountMax=1
    -o ServerAliveInterval=3
    -o TCPKeepAlive=no
    "${user}@${host}"
    'rm -f .ssh_tty; ln -s "${SSH_TTY}" .ssh_tty; tmux attach || tmux'
)

title 'Making initial connection‚Ä¶ üòê'
ssh "${opts[@]}"

while :; do
    title 'Reconnecting‚Ä¶ üò£'
    ssh "${opts[@]}"
    sleep 1
done
